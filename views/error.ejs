<% layout('layouts/boilerplate.ejs') -%>

<div class="container row">
    <div class="alert alert-danger col-6 m-auto mt-5 mb-5 text-center" role="alert">
        <h4 class="alert-heading"><%= err.message %> (Error <%= err.statusCode %>)</h4>
        <% if (process.env.NODE_ENV !== 'production') { %>
            <p class="text-break"><%= err.stack %></p>
        <% } %>

    </div>
</div>